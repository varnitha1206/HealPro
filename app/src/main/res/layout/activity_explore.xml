<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Navy_Blue"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="9dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        android:padding="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/img_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Check out these amazing blogs for a healthier life!"
            android:textColor="@color/Navy_Blue"
            android:textStyle="italic" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/scrollView"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="225dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/gridlayout"
            android:foregroundGravity="center"
            app:columnCount="2"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rowCount="4">

            <ImageButton
                android:layout_width="150dp"
                android:id="@+id/b1"
                android:layout_height="150dp"
                android:background="@drawable/border"
                android:scaleType="fitCenter"
                android:src="@drawable/healthy_maven" />

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/b2"
                android:background="@drawable/border"
                android:scaleType="fitCenter"
                android:src="@drawable/fit_foodie" />

            <ImageButton
                android:layout_width="150dp"
                android:id="@+id/b3"
                android:layout_height="150dp"
                android:background="@drawable/border"
                android:scaleType="fitCenter"
                android:src="@drawable/real_food_dieticians" />

            <ImageButton
                android:layout_width="150dp"
                android:id="@+id/b4"
                android:layout_height="150dp"
                android:background="@drawable/border"
                android:scaleType="fitCenter"
                android:src="@drawable/natural_living_ideas" />

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/b5"
                android:background="@drawable/border"
                android:scaleType="fitCenter"
                android:src="@drawable/keep_it_simpelle" />

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/border"
                android:scaleType="fitCenter"
                android:src="@drawable/breaking_muscle" />

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/border"
                android:scaleType="fitCenter"
                android:src="@drawable/healthy_maven" />

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/border"
                android:scaleType="fitCenter"
                android:src="@drawable/real_food_dieticians" />
        </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>